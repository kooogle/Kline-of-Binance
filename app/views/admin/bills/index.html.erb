<%= content_for(:title,  '买卖挂单列表 | BLOCK') %>
<section class="content-header">
  <h1>
    买卖挂单 <small>信息预览</small>
  </h1>
  <ol class="breadcrumb">
    <li><a href="#"><i class="fa fa-btc"></i> Dashboard</a></li>
    <li class="active"><i class="fa fa-sheqel"></i> 买卖挂单</li>
  </ol>
</section>
<section class="content">
  <div class="box box-primary">
    <div class="box-header">
      <a href="<%= new_admin_bill_path %>" class="btn bg-primary btn-flat"><i class="ion-plus"></i> 添加订单</a>
    </div>
    <div class="box-body">
      <div class="row">
        <div class="col-sm-12">
          <table id="example1" class="table table-bordered table-striped dataTable" role="grid" aria-describedby="example1_info">
            <thead>
            <tr>
              <th tabindex="0" aria-controls="example1" style="text-align: center">市场</th>
              <th tabindex="0" aria-controls="example1" style="text-align: center">数量</th>
              <th tabindex="0" aria-controls="example1" style="text-align: center">单价</th>
              <th tabindex="0" aria-controls="example1" style="text-align: center">总价</th>
              <th tabindex="0" aria-controls="example1" style="text-align: center">状态</th>
              <th tabindex="0" aria-controls="example1" style="text-align: center;width: 240px">操作</th>
            </tr>
            </thead>
            <tbody>
            <% @bills.each do |item| %>
              <tr style="text-align: center">
                <td><%= item.chain.market_name%></td>
                <td><%= item.amount %></td>
                <td><%= item.univalent %></td>
                <td><%= item.expense %></td>
                <td><%= item.state_cn %><br><%= item.created_at.strftime('%Y-%m-%d %H:%M') %></td>
                <td>
                  <a href="<%= edit_admin_bill_path(item) %>" class="btn bg-orange btn-flat">
                    <i class="glyphicon glyphicon-edit"></i>
                    编辑
                  </a>
                  <a href="<%= admin_bill_path(item) %>" class="btn bg-red btn-flat" data-method="delete" data-confirm="确定删除该订单吗？">
                    <i class="glyphicon glyphicon-trash"></i>
                    删除
                  </a>
                </td>
              </tr>
            <% end %>
            </tbody>
          </table>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-5">
          <div class="dataTables_info" id="example1_info" role="status" aria-live="polite"><h5>总计：「<%= @bills.count %>」种类</h5></div>
        </div>
        <div class="col-sm-12">
          <div class="dataTables_paginate paging_simple_numbers">
          <%= will_paginate @bills, :class=>'apple_pagination' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>